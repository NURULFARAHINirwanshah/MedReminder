<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight=".3"
            app:srcCompat="@drawable/img_pills" />

        <TextView
            android:id="@+id/tvSname"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Specific name"
            android:textColor="@color/colorAccent"
            android:textSize="17sp" />


        <TextView
            android:visibility="invisible"
            android:id="@+id/tvMid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:text="mid" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIndication"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp"
            android:text="Tahan sakit"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDosage"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="15dp"
            android:text="1 Tablets"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvFrequency"
            android:layout_width="29dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:fontFamily="sans-serif-condensed"
            android:text="1"
            android:gravity="right"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:fontFamily="sans-serif-condensed"
            android:text=" Times daily After meal"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:paddingTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textSize="13sp"
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:gravity="right"
            android:textStyle="italic"
            android:text="10-05-2019" />

    </LinearLayout>

</LinearLayout>